void main(string sQuest)
{
	object oPC = GetPCSpeaker();
	int nState = ACR_RetrieveQuestState(sQuest, oPC);
	
	// set the NPC to follow
	AddHenchman(oPC); AssignCommand(OBJECT_SELF, ActionForceFollowObject(oPC));

	// set the quest name
	SetLocalString(OBJECT_SELF, ACR_QST_NAME, sQuest);
	
	// set the quest state
	ACR_AddPersistentJournalQuestEntry(sQuest, nState + 1, oPC, TRUE, FALSE, FALSE);
}