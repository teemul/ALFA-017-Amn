// The main event handler.
void main();

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main() {
    ACR_TriggerOnEnter();

    // Custom code goes here.
	object oPC = GetEnteringObject();
	object oTestItem = GetFirstItemInInventory(oPC);
	int iTest = 0;
	SendMessageToPC(oPC, "Now entering customizer area.");
	while (oTestItem != OBJECT_INVALID) {	
		iTest = GetLocalInt(oTestItem, "XC_NOT_CRAFTABLE");
		if (iTest == 0) {
			// Item is moddable
			SetLocalInt(oTestItem, "XC_NOT_CRAFTABLE", 17);
		}
		oTestItem = GetNextItemInInventory(oPC);
	}
	int nIndex = 0; // 0 = INVENTORY_SLOT_HEAD
	while (nIndex <= 18) {
		// loop through all 18 possible inventory slots
		oTestItem = GetItemInSlot(nIndex, oPC);
		iTest = GetLocalInt(oTestItem, "XC_NOT_CRAFTABLE");
		if (iTest == 0) {
			// Item has been set unmoddable by entering this area
			SetLocalInt(oTestItem, "XC_NOT_CRAFTABLE", 17);
		}
		nIndex = nIndex + 1;
	}
}